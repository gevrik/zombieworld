<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.totalmadownage.zombieworld"
      android:versionCode="3"
      android:versionName="1.1">
    <application android:icon="@drawable/icon" android:label="@string/app_name" >

        <activity android:name=".Splash"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Zombieworld"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
                <category android:name="android.intent.category.VIEW" />
            </intent-filter>
        </activity>
        
        <activity android:name=".About"
		android:label="@string/about_title"
		android:theme="@android:style/Theme.Dialog" >
		</activity>
		
		<activity android:name=".Help"
		android:label="@string/help_title"
		android:theme="@android:style/Theme.Dialog" >
		</activity>
		
		<activity android:name=".CombatSummGood"
		android:label="@string/CombatSummGood_title"
		android:theme="@android:style/Theme.Dialog" >
		</activity>
		
		<activity android:name=".Prefs"
		android:label="@string/settings_title"
		android:screenOrientation="portrait"
		android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
		</activity>
		
		<activity android:name=".Game"
		android:label="@string/game_title"
		android:screenOrientation="portrait"
		android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
		
		<activity android:name=".Website"
		android:label="Zombieworld Website" />

    </application>
    
    <uses-sdk android:minSdkVersion="3" android:targetSdkVersion="4" />
	<uses-permission android:name="android.permission.INTERNET" />
	
</manifest> 